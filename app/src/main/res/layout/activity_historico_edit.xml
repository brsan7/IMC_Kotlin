<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/verde"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A4A4A"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4A4A4A"
            android:orientation="horizontal">

            <TextView
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constHistEditData" />

            <TextView
                android:id="@+id/tvDataEdit"
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Campo Data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4A4A4A"
            android:orientation="horizontal">

            <TextView
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constHistEditHora" />

            <TextView
                android:id="@+id/tvHoraEdit"
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Campo Hora" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#4A4A4A"
            android:orientation="horizontal">

            <TextView
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constHistEditPeso" />

            <TextView
                android:id="@+id/tvPesoEdit"
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Campo Peso" />

            <TextView
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constHistEditKg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#4A4A4A"
            android:orientation="horizontal">

            <TextView
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constHistEditAltura" />

            <TextView
                android:id="@+id/tvAlturaEdit"
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Campo Altura" />

            <TextView
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constHistEditM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4A4A4A"
            android:orientation="horizontal">

            <TextView
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constHistEditGenero" />

            <TextView
                android:id="@+id/tvGeneroEdit"
                style="@style/edHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Campo GÃªnero" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#707070"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/constHistEditObservacoes"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etObservacaoEdit"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:hint="@string/constHistEditObservacoesHint"
            android:autofillHints="@string/constHistEditObservacoesHint"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="textMultiLine" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
